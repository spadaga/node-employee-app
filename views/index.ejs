<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Employee List</h1>
    <a href="/employees/new" class="btn btn-primary mb-3">Add New Employee</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.position %></td>
            <td>$<%= employee.salary %></td>
            <td>
              <a href="/employees/<%= employee._id %>" class="btn btn-info btn-sm">View</a>
              <a href="/employees/<%= employee._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>